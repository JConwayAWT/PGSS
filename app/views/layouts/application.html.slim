doctype html
html
  head
    title PGSS - Pennsylvania Governor's School for the Sciences
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  body
    nav.navbar.navbar-inverse#no-border-radius.blue-navbar role="navigation"
      .container-fluid style="height:70px; padding-top:10px;"
        .navbar-header
          .navbar-brand
            a href="/" style="color:white; font-size:40px; text-decoration: none; background-color: transparent" PGSS
          ul.nav.navbar-nav.navbar-left
            li
              = image_tag "pgss_logo_slim.png", style: "height: 40px;"

        ul.nav.navbar-nav.navbar-right style="padding-right: 25px;"
          li.active
            a href="/alumni" style="background-color: transparent; border-right: thin solid white" Alumni
          li.dropdown
            a.dropdown-toggle.no-click-color-change.white-right-border data-toggle="dropdown" href="#"
              .white-header-link
                | FAQs
                span.caret-medium
            ul.dropdown-menu role="menu"
              li
                = link_to "Applicants", "/applicant_faq"
              li
                = link_to "Accepted Students", "/accepted_faq"
              li
                = link_to "Parents", "/parent_faq"
          li.dropdown
            a.dropdown-toggle.no-click-color-change.white-right-border data-toggle="dropdown" href="#"
              .white-header-link
                | Employment
                span.caret-medium
            ul.dropdown-menu role="menu"
              li
                = link_to "Faculty Application", "#"
              li
                = link_to "TA Job Description", "/counselor_description"
              li
                = link_to "TA Application", "#"
              li
                = link_to "RLD Application", "#"
          li.dropdown
            a.dropdown-toggle.no-click-color-change data-toggle="dropdown" href="#"
              .white-header-link
                | About PGSS
                span.caret-medium
            ul.dropdown-menu role="menu"
              li
                = link_to "Program Overview", "/program_overview"
              li
                = link_to "Application and Selection", "/selection_process"
              li
                = link_to "Program Costs and Commitment", "/costs_and_commitment"


    .container#body-container
      = yield

    .footer#footer
      .container
        .row
          .col-md-12
            .text-center.soft-gray-text.small-text.text-padded-top
